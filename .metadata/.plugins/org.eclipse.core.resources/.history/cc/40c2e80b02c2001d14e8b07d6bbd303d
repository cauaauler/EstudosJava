package exercícios;

import java.util.Scanner;

public class Exer3 {

	public static void main(String[] args) {
		
		Scanner leitor = new Scanner(System.in);
		
		int lata = 10;
		int preço = 50;
		int qnt_latas = 1;
		double total = 0;
		
		System.out.println("Metros quadrados a sem pintados: ");
		int metros = Integer.parseInt(leitor.nextLine());
		
		float gasto_tinta = metros/3;
		
		int x=0;
		while(x<100) {
		if(gasto_tinta <= lata) {
			total = preço*qnt_latas;
			}else {
				lata+=lata;
				qnt_latas++;
			}
		}
		System.out.println("Você vai gastar: " +qnt_latas+ "latas de tinta");
		System.out.println("Vai pagar R$"+total);
		
	}

}
