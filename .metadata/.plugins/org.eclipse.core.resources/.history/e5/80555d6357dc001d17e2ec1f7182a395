package exercicios;

import java.util.Scanner;

public class Exer06 {
	public static void main(String[] args) {
		
		Scanner leitor = new Scanner(System.in);
		
		System.out.println("         CARDÁPIO    ");
		System.out.println("Especificação 	      Código    Preço\n"
						+ "Cachorro Quente 	1   	R$ 10,50\n"
						+ "Bauru Simples   	2   	R$ 22,50\n"
						+ "Bauru com Ovo   	3   	R$ 25,50\n"
						+ "Hambúrguer      	4   	R$ 18,00\n"
						+ "Cheeseburguer   	5   	R$ 18,00\n"
						+ "Refrigerante    	6   	R$ 6,00");
		
		double[] precos = {10.50 , 22.50 , 22.50 , 18.00 , 18.00 , 6.00};
		String[] nomes = {"Cachorro Quente","Bauru Simples","Bauru com Ovo","Hambúrguer","Cheeseburguer","Refrigerante"};
		String[] compras = new String[10]; 
		
		boolean x = true;
		boolean y = true;
		
		int z = 0;
		double preco = 0;
		double total = 0;
		
		while(x) {
		System.out.print("Número do pedido ou 0 para sair: ");
		int n = Integer.parseInt(leitor.nextLine());
		
		if (n == 0) {
			System.out.println();
			System.out.println("Obrigado pela compra!");
			System.out.println();
			break;
		}else {
			y = true;
			
			while(y) {
				System.out.print("Quantos "+nomes[n-1]+" você deseja? ");
				int quant = Integer.parseInt(leitor.nextLine());
				preco = precos[n-1]*quant;
				total += preco;
				compras[z] = "    "+quant+"    "+"  "+nomes[n-1]+"    	R$ "+preco;
				y = false;
				z++;
				}
				
		}
	}
	if(z > 0) {
	System.out.println("PEDIDO");
	System.out.println();
	System.out.println("Quantidade     "+" Item     "+"	Valor     ");
	}
	
	for (int j = 0; j < z; j++) {
		System.out.println(compras[j]);
		}
		
		
	}
		
}
	

