package exemplos;

public class Motorista {
	private int idade;

	public Motorista(int idade) {
		super();
		this.setIdade(idade);
	}

	public int getIdade() {
		return idade;
	}

	public void setIdade(int idade) {
		if(idade < 18) {
			System.out.println("Motorista não pode ser de menor.");
		}else {
			this.idade = idade;
		}
	}
	
	 

}
