package exercícios;

import java.util.Scanner;

public class Exer1 {
	public static void main(String[] args) {
		
		Scanner leitor = new Scanner(System.in);
		
		System.out.print("NÚMERO DE TURMAS: ");
		int turmas = Integer.parseInt(leitor.nextLine());
		
		for (int i = 0; i< turmas; i++) {
			System.out.print("Quantidade de alunos da turma "+(i+1)+": ");
			
			int alunos = Integer.parseInt(leitor.nextLine());
			
			if (alunos < 32) {
				
				int totalAlunos =+ alunos;
				System.out.println(totalAlunos);
				
			}else {
				
				System.out.println("A turma não pode ter mais de 32 alunos!");
				
				
			}
		}
		
	}

}
