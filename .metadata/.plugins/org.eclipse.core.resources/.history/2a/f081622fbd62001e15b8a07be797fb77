package exemplos;

public class Motorista {
	private int idade;

	public Motorista(int idade) {
		super();
		this.setIdade(idade);
	}

	public int getIdade() {
		return idade;
	}

	public void setIdade(int idade) {
		if(idade < 18) {
			throw new RuntimeException("Motorista não pode ser de menor.");
		}
		this.idade = idade;
		
	}
	
	 

}
