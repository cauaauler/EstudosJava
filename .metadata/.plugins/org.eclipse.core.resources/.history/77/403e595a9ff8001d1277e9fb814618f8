package exemplo01;

public class Pessoa {
	private String nome;
	private int idade;
	
	//set inserir um valor em um atributo, void, parâmetro do tipo/classe do atributo
	public void setNome(String nome) {
		this.nome = nome;
		
	}
	//get ler o valor de um atributo, possui retorno tipo/classe do atributo, não possui parâmetro
	public String getNome() {
		return this.nome;
	}
	public void setIdade(int idade) {
		if(idade > 0) {
			this.idade = idade;
		}
		
	}
	public int getIdade() {
		return this.idade;
	}

}
