package exercicios;

import java.util.Scanner;

public class Exer3 {

	public static void main(String[] args) {
		Scanner leitor = new Scanner(System.in);
		
		
		System.out.print("Informe o primeiro número(inteiro): ");
		String n1 = Integer.parseInt(leitor.nextLine());
		
		System.out.print("Informe o segundo número(inteiro): ");
		String n2 = Integer.parseInt(leitor.nextLine());
		
		
		int n1_int = n1);
		int n2_int = Integer.parseInt(n2);
		
		
		if(n1_int == n2_int) {
			System.out.println("Os números digitados foram: "+n1+" e "+n2);
		}
		else if(n1_int > n2_int) {
			System.out.println("O maior número é: " + n1);
		}
		else {
			System.out.println("O maior número é: " + n2);
		}

	}

}