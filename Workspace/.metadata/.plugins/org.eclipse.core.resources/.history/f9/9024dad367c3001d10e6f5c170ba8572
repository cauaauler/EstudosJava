package exercícios;

import java.util.Scanner;

public class Exer5 {

	public static void main(String[] args) {
		
		Scanner leitor = new Scanner(System.in);
		
		System.out.println("Digite um número: ");
		int n = Integer.parseInt(leitor.nextLine());
		
		int conta = 0;
		int x = n;
		int total = 0;
		for(int i=0;i<x;i++) {
			int fatorial = n-1;
			conta = n*fatorial;
			//fatorial--;
			//total = conta+total;  
			n--;
		}
		System.out.println(conta);
	}

}
