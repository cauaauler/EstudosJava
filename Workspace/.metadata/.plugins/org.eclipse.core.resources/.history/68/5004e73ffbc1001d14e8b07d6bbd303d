package exercícios;

import java.util.Scanner;

public class Exer1 {
	public static void main(String[] args) {
		
		Scanner leitor = new Scanner(System.in);
		
		System.out.print("Número de turmas: ");
		int turmas = Integer.parseInt(leitor.nextLine());
		//tentar fazer com while
		int x = 0;
		while(x < turmas) {
			
			System.out.print("Quantidade de alunos da turma "+(x+1)+": ");
			int alunos = Integer.parseInt(leitor.nextLine());
				if (alunos > 32) {
					System.out.println("O número máximo de alunos é 32");
				}
			x++;
			
		}
					
	}
}
